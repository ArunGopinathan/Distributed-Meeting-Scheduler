<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="edu.uta.cse.distributedmeetingscheduler.ADD_Invites"
android:layout_weight="1">

<ImageView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:src="@mipmap/dms_logo" />
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true"
        android:layout_marginBottom="8dp" android:visibility="gone" android:layout_gravity="center" />

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:id="@+id/linear1"

        android:layout_alignTop="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Add Invites"
            android:id="@+id/add_invitees"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="140dp" />

        <ListView
            android:id="@+id/add_invitees_list"
            android:layout_width="match_parent"
            android:layout_height="245dp"></ListView>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Create Meeting"
            android:id="@+id/done"
            android:layout_gravity="bottom|center_horizontal" />
    </LinearLayout>
</ScrollView>

</RelativeLayout>
